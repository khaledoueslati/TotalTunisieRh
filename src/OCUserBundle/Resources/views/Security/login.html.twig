{% extends "::base.html.twig" %}

{% block title %}Login Total RH{% endblock %}


{% block body %}

    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

<h2 class="text-blue text-center">TOTAL RH</h2>
    <br/>
    <form action="{{ path('login_check') }}" method="post">
        {# S'il y a une erreur, on l'affiche dans un joli cadre #}
        {% if error %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endif %}
        <div class="form-group has-feedback">
            <input type="text"   placeholder="User name" class="form-control" id="username" name="_username" value="{{ last_username }}" />

            <span class="fa fa-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Password" id="password" name="_password" />
            <span class="fa fa-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">

                </div>
            </div><!-- /.col -->
            <div >
                <button type="submit" class="btn btn-primary btn-block btn-lg btn-flat">Connexion &nbsp;</button>
            </div><!-- /.col -->
        </div>
    </form>
{% endblock %}